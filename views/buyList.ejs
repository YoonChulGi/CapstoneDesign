			<th scope="col">사진</th>
			<th scope="col">카테고리</th>
			<th scope="col">제목</th>
			<th scope="col">판매자 이름</th>
			<th scope="col">가격</th>
		</tr>
		</thead>
		<tbody>
			<%for(let i=0;i<articleInfo.length;i++){let category = articleInfo[i]._doc.category;if(category=="C")category="C/C++";%>
			<tr>
				<td><img src="<%=articleInfo[i]._doc.picture%>" width="50px" height="50px" onclick="location.href='/buy?id=<%=articleInfo[i]._doc._id%>'"></td>
				<td><%=category%></td>
				<td><a href="/buy?id=<%=articleInfo[i]._doc._id%>"><%=articleInfo[i]._doc.title%></a></td>
				<td><%=articleInfo[i]._doc.author%></td>
				<td><%=articleInfo[i]._doc.price%></td>
			</tr>
			<%}%>
			
			
		</tbody>
		</table>
		
		
