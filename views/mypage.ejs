<script type="text/javascript">
function onClick(val) {
	switch(val) {
	case "캐쉬 충전":
		window.location.href = '/charge';
		break;
	case "회원 정보 수정": 
		window.location.href = '/editUserInfo';
		break;
	case "장바구니":
		window.location.href = '/basket';
		break;
	case "내가 등록한 재능":
		window.location.href = '/myArticles';
		break;
	case "구매중인 재능":
		window.location.href = '/buyList';
		break;
	case "판매중인 재능":
		window.location.href = '/sellList';
		break;
	case "거래 내역":
		window.location.href = '/index';
		break;
	case "회원 탈퇴":
		window.location.href = '/index';
		break;
	}
}
</script>
	
